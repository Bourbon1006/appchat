<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/voiceIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_voice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/colorPrimary" />

    <TextView
        android:id="@+id/voiceDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/voiceIcon"
        app:layout_constraintTop_toTopOf="@id/voiceIcon"
        app:layout_constraintBottom_toBottomOf="@id/voiceIcon" />

    <ProgressBar
        android:id="@+id/voiceProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:progressTint="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="@id/voiceDuration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/voiceIcon"
        app:layout_constraintBottom_toBottomOf="@id/voiceIcon" />

</androidx.constraintlayout.widget.ConstraintLayout> 